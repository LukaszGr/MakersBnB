

<div class="header clearfix">
  <nav>
    <ul class="nav nav-pills pull-right">
      <% if current_user %>
      <li role="presentation"> Logged in as: <%= current_user.name %></li>
      <li role="presentation" class="active">
        <form method='post' action='/session/end'>
          <input type='hidden' name='_method' value='delete'>
          <input class="btn btn-default" type='submit' value='Sign Out'>
        </form></li>
      <li role="presentation">
        <a class="btn btn-default" href="/space/new">Add Space</a>
      </li>
        <% if has_bookings %>
      <li role="presentation">
        <form method='get' action='/booking/view'>
            <input class="btn btn-default" type='submit' value='View booking requests'>
        </form>
      </li>
    <%end%>
    <% else %>
    <li role="presentation">
      <a class="btn btn-success" href="/user/new">Sign Up</a>
     </li>
     <li role="presentation">
       <a class="btn btn-info" href="/session/new">Sign In</a>
    </li>
    <% end %>
    </ul>
  </nav>
  <img src="/img/airbnb.png" class="logo img-rounded">
</div>
