<% if !current_user %>
<div class="jumbotron">
  <h1>Feel at home anywhere</h1>
  <p class="lead">Find amazing spaces all over the world - provided by people just like you.</p>
  <p><a class="btn btn-lg btn-success" href="/user/new" role="button">Sign up today</a></p>
</div>
<% end %>



  <div id="current_space_list" class="marketing">
    <div class="row">
    <h1>Current spaces</h1>
      </div>
  <% @all_available_spaces.each do |space| %>
    <div class="row space rounded">
      <div class="col-xs-6">
        <h4><%= space.name %> </h4>
        <p><%= space.description %> --- <%= space.price_per_night.to_i %></p>
      </div>
    <div class="col-xs-6 text-right make-booking">
          <% if current_user %>
        <form class="" action="/booking/new/" method="post">
          <input type="hidden" name="space_id" value="<%=space.id%>">
          <input class="btn btn-warning" type="submit" id="booking" value="Make Booking">
        </form>
            <% else %>
            <a class="btn btn-info" href="/session/new">Sign in to Book</a>
            <% end %>
    </div>
  </div>
    <%end%>
  </div>
